pipeline{
    agent any
    tools {
        jdk 'java-11'
        maven 'maven'
    }

    stages{
        stage('Git checkout') {
            steps {
                    git branch: 'main', url: 'https://github.com/ManojKRISHNAPPA/test-1.git'
            }
        }
        stage('Compile') {
            steps {
                    sh 'mvn compile'
            }         
        }
        stage('Build'){
            steps {
                    sh 'mvn clean install'
            }
        }
        stage('build nad tag Docker file'){
            steps{
                sh 'docker build -t praveenkumarchannappagoudra/project:1 .'
            }
        }
        stage('Containersation'){
            steps{
                sh '''
                docker stop c1
                docker rm c1
                docker run -it -d --name c1 -p 8081:8080 praveenkumarchannappagoudra/project:1
                '''
            }
        }
        stage('Login to Docker Hub'){
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                    }
                }
            }
        }
        stage('pushing to docker repository'){
            steps{
                sh 'docker push praveenkumarchannappagoudra/project:1'
            }
        }
    }

}

